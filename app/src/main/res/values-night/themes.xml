<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FreelanceApp" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
    </style>

    <!-- Button Styles -->
    <style name="RegisterButtonStyle">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/mediumButtonHeight</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:textColor">#f8cd65</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Sonraki</item>
        <item name="android:background">@drawable/welcome_screen_next_button_bg</item> <!-- Koyu kahverengi arka plan -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text Styles -->
    <style name="WelcomeTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Sarı renk -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">HOŞ GELDİN</item>
    </style>

    <style name="WelcomeDescriptionTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Koyu kahverengi tonu -->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/welcome_description_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText Styles -->
    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edittextHeight</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">#444444</item>
        <item name="android:textColor">@color/black</item>
    </style>




    <!-- Bottom Nav Style -->
    <style name="MyBottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/night_bottom_nav_bg</item>
        <item name="itemIconTint">@color/night_selected_item_color</item>
        <item name="itemTextColor">@color/night_unselected_item_color</item>
    </style>

    <!-- Filter ImageView Style -->
    <style name="FilterImageviewStyle" >
        <item name="android:src">@drawable/filter_white</item>
    </style>

    <style name="AppBackGroundStyle" >
        <item name="android:background">@color/dark_bg_color</item>
    </style>


    <!-- Icons Style -->
    <style name="MessageIconStyle" >
        <item name="android:src">@drawable/message_white</item>
    </style>

<!-- NEW STYLE //////////////////////////////////////// -->

    <!-- Application Background Style-->
    <style name="ApplicationBackGround">
        <item name="android:background">@color/app_bg_color</item>
    </style>
    <style name="ApplicationSecondaryBackground">
        <item name="android:background">@color/secondary_bg_color</item>
    </style>


    <!-- Karanlık tema için buton stili -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <!-- Karanlık tema için Text stilleri -->
    <style name="BoldTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SecondaryBigTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecondaryTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ThirdTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Karanlık tema için Icon stilleri -->
    <style name="SchoolIconStyle" parent="FilterImageviewStyle">
        <item name="android:background">@drawable/gray_rounded_bg</item>
        <item name="android:padding">6dp</item>
        <item name="android:src">@drawable/cap_white</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <!-- SearchView Stili -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:textColor">@color/searchview_text</item>
        <item name="android:radius">8dp</item>
    </style>

    <!-- FAB Stili -->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/icon_add_light</item>
        <item name="backgroundTint">@color/button_bg_color</item>
    </style>

</resources>