<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Base.Theme.FreelanceApp" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="Theme.FreelanceApp" parent="Base.Theme.FreelanceApp" />

    <!-- Button Styles -->
    <style name="RegisterButtonStyle">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">#525CEB</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/mediumButtonHeight</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:textColor">#F8EDFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Sonraki</item>
        <item name="android:background">@drawable/welcome_screen_next_button_bg</item> <!-- Koyu kahverengi arka plan -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Sonraki</item>
        <item name="android:background">@drawable/cancel_button_bg</item> <!-- Koyu kahverengi arka plan -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text Styles -->
    <style name="WelcomeTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Sarı renk -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">HOŞ GELDİN</item>
    </style>

    <style name="WelcomeDescriptionTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Koyu kahverengi tonu -->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/welcome_description_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText Styles -->
    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edittextHeight</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">#444444</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Search View Styles -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_background_light</item>
    </style>


        <!-- Bottom Nav Style -->
    <style name="MyBottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <!-- Seçili eleman rengi -->
        <item name="itemBackground">@color/light_bottom_nav_bg</item>
        <!-- Seçili olmayan eleman rengi -->
        <item name="itemIconTint">@color/light_selected_item_color</item>
        <item name="itemTextColor">@color/light_selected_item_color</item>
    </style>

    <!-- Filter ImageView Style -->
    <style name="FilterImageviewStyle" >
        <item name="android:src">@drawable/filter_black</item>
    </style>

</resources>