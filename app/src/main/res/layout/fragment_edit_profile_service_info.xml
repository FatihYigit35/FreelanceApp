<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profileinfo.EditProfileServiceInfoFragment">


    <EditText
        android:maxLines="2"
        android:id="@+id/etWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mesleğin"/>


    <EditText
        android:maxLines="2"
        android:id="@+id/etWorkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="İş ünvanın"/>

    <EditText
        android:maxLines="8"
        android:id="@+id/etExplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yaptığın iş hakkında bilgi ver"/>

    <EditText
        android:maxLines="4"
        android:id="@+id/etSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yeyeneklerin neler"/>



    <Button
        android:text="Kaydet"
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>