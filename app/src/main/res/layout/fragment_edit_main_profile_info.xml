<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userName"
            type="String" />
        <variable
            name="eMail"
            type="String" />
        <variable
            name="bio"
            type="String" />
        <variable
            name="job"
            type="String" />
    </data>
    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".view.profile.EditMainProfileInfoFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

             <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserProfilePhoto"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/placeholder"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/ivCancelUploadImage"
                android:src="@drawable/baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/ivEditUserProfilePgoto"
                android:src="@drawable/baseline_add_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:visibility="gone"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_file_upload_24"
            android:layout_gravity="center"
            android:id="@+id/btnSaveProfilePhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <EditText
            android:id="@+id/etUserName"
            android:text="@{userName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="kullanıcı adı" />


        <EditText
            android:id="@+id/etEmail"
            android:text="@{eMail}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextHeight"
            android:hint="E-posta adresiniz" />

        <EditText
            android:id="@+id/etUserJob"
            android:text="@{job}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="7"
            android:hint="İşinizi girin" />

        <EditText
            android:id="@+id/etUserBio"
            android:text="@{bio}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="7"
            android:hint="Kendinizden Bahsedin" />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaydet"/>
    </LinearLayout>
</layout>
