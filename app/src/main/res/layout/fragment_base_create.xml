<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BaseCreateFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCreateFreelancerPost"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="#4C89C1"
            android:textSize="25sp"
            android:text="Ben bir Freelancer olrak çalışmak istiyorum"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCreateEmployerPost"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="#820101"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Ben bir Freelancer'ı işe almak istiyorum"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCreateDiscoverPost"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="#047838"
            android:textSize="25sp"
            android:text="Ben bir Gönderi oluşturmak istiyorum"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>